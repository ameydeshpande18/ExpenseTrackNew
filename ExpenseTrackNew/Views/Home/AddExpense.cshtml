@{
    ViewBag.Title = "Add Expense Page";
}
<br />
<form id="expenseForm" method="post" autocomplete="off">

    <div class="form-group">
        <label for="expTitle">Expense Title</label>
        <input type="text" name="expTitle" id="expTitle" class="form-control required" placeholder="Name your expense" autofocus="" spellcheck="true" />
    </div>

    <div class="form-group">
        <label for="expdesc">Description</label>
        <textarea id="expdesc" name="expdesc" class="form-control" placeholder="Describe Expense" rows="3" spellcheck="true" required="required"></textarea>
    </div>

    <div class="form-group">
        <label for="expcat">Category</label>
        <select id="expcat" name="expcat" class="form-control" required="required">
            <option value="" selected disabled>Select category</option>

        </select>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <label for="expcontrbutor">Contributor</label>
            <select id="expcontrbutor" name="expcontrbutor" class="form-control" required="required">
                <option value="" selected disabled>select Contributor</option>

            </select>

        </div>
    </div>

    <div class="row">
        <div class="col-xs-6 col-md-3">
            <div class="form-group">
                <label for="expamt">Amount</label>
                <input type="" step="any" name="expamt" id="expamt" class="form-control" placeholder="Enter Amount" required="required" />
            </div>

        </div>
        <div class='col-xs-7 col-md-3 col-md-offset-1'>
             <div class="form-group">
                <label for="datetimepicker1">Date</label>
                <span class='input-group date'>
                    <input id='datetimepicker1' name="datetimepicker1" class="form-control" required="required" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </span>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-1">
            <button id="btnsubmit" onclick="ConfirmModalLoad()" value="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="col-md-11">
            <button type="reset" class="btn btn-primary">Clear</button>
        </div>

    </div>

</form>
